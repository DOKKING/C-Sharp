@model Magazine_2021.Data.Models.Car

<form class="p-a-1" asp-action="EditCar"  method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="id" hidden="hidden">ID авто</label>
            <input class="form-control" asp-for="id" hidden="hidden"/>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="name">Название авто</label>
            <input class="form-control" asp-for="name" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="shortDesc">Краткое описание</label>
            <input class="form-control" asp-for="shortDesc" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="longDesc">Полное описание</label>
        <textarea class="form-control" asp-for="longDesc" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="price">Цена</label>
            <input class="form-control" asp-for="price" type="number" />
        </div>
        <div class="form-group col-md-5">
            <label asp-for="categoryId">ID категории</label>
            <input class="form-control" asp-for="categoryId" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-check col-md-5">
            <label asp-for="isFavourite" class="form-check-label">
                <input asp-for="isFavourite" class="form-check-input" type="checkbox" />
                Добавить на главной странице
            </label>
        </div>
        <div class="form-check col-md-5">
            <label asp-for="available" class="form-check-label">
                <input asp-for="available" class="form-check-input" type="checkbox" />
                Товар доступен для заказа
            </label>
        </div>
    </div>
    <div class="form-group mb-5">
        <label asp-for="img">Фото</label>
        <input asp-for="img" type="file" name="file" />
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>