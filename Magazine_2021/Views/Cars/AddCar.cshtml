@model Magazine_2021.Data.Models.Car;

@using (Html.BeginForm("AddCar", "Cars", FormMethod.Post))
{
    <fieldset>
        <div class="form-row">
            <div class="form-group col-md-6">
                @Html.LabelFor(a => a.name, "Название")
                <br />
                @Html.EditorFor(a => a.name)
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(a => a.shortDesc, "Краткое описание")
                <br />
                @Html.EditorFor(a => a.shortDesc)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(a => a.longDesc, "Полное описание")
            <br />
            @Html.EditorFor(a => a.longDesc)
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                @Html.LabelFor(a => a.price, "Цена")
                <br />
                @Html.EditorFor(a => a.price)
            </div>
            <div class="form-group col-md-5">
                @Html.LabelFor(a => a.categoryId, "ID категории")
                <br />
                @Html.EditorFor(a => a.categoryId)
            </div>
        </div>
        <div class="form-group">
            <div class="form-check col-md-5">
                @Html.CheckBoxFor(a => a.isFavourite, "Избранный")
            </div>
            <div class="form-check col-md-5">
                @Html.CheckBoxFor(a => a.available, "Доступен для заказа")
            </div>
        </div>

        <div class="form-group mb-5">
            <label asp-for="img">Фото</label>
            <input asp-for="img" type="file" name="file" />
        </div>

        <p>
            <input type="submit" value="Отправить" />
        </p>
    </fieldset>
}